<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace = "boarda.model.BABean">
  	<select id="GetBAListCount" resultType="int">
		select count(*) from boarda
		<if test="bacategory != null">
			<if test="bacategory == '회원'">
				where bacategory='회원'
			</if>
			<if test="bacategory == '클래스이용'">
				where bacategory='클래스이용'
			</if>
			<if test="bacategory == '학습'">
				where bacategory='학습'
			</if>
			<if test="bacategory == '강좌관리'">
				where bacategory='강좌관리'
			</if>
			<if test="bacategory == '기타'">
				where bacategory='기타'
			</if>
		</if>
		<if test="keyword != null">
			where basubject like #{keyword}
		</if>
	</select>
  	
  	<select id="GetBAList" resultType="boarda.model.BABean">
  		select * from boarda
  		<if test="bacategory != null">
			<if test="bacategory == '회원'">
				where bacategory='회원'
			</if>
			<if test="bacategory == '클래스이용'">
				where bacategory='클래스이용'
			</if>
			<if test="bacategory == '학습'">
				where bacategory='학습'
			</if>
			<if test="bacategory == '강좌관리'">
				where bacategory='강좌관리'
			</if>
			<if test="bacategory == '기타'">
				where bacategory='기타'
			</if>
		</if>
		<if test="keyword != null">
			where basubject like #{keyword}
		</if>
		order by banum desc
  	</select>
  	
  	<select id="GetBA" resultType="boarda.model.BABean">
  		select * from boarda where banum=#{banum}
  	</select>
  	
  	<insert id="InsertBA">
  		insert into boarda(banum,bacategory,basubject,bacontent)
  		values(ba_seq.nextval,#{bacategory},#{basubject},#{bacontent})
  	</insert>

  	<update id="UpdateBA">
  		update boarda set bacategory=#{bacategory},basubject=#{basubject},bacontent=#{bacontent}
  		where banum=#{banum}
  	</update>
  	
  	<delete id="DeleteBA">
  		delete boarda where banum=#{banum}
  	</delete>
  	
</mapper>